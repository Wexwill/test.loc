<?php

use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_form_alter().
 */
function an_task_35_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  $form['phone_field'] = [
    '#type' => 'tel',
    '#title' => 'Phone number',
    '#pattern' => '^\+?(375)?(-| )?\(?(17|29|33|44)\)?(-| )?[0-9]{3}(-| )?[0-9]{2}(-| )?[0-9]{2}$',
    '#weight' => -15,
  ];
}
